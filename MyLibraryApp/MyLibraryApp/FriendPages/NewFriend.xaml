<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyLibraryApp.NewFriend"
             Title="New Friend">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Clear" Clicked="Btn_clear_Clicked"/>
        <ToolbarItem Text="Save" Clicked="Btn_save_Clicked"/>
    </ContentPage.ToolbarItems>
    
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Phone:" FontSize="Small" />
            <Entry x:Name="Ent_phone" FontSize="Small" Margin="0" />
            <!--<StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                <Button x:Name="Btn_contact" Text="contacts" Clicked="Btn_contact_Clicked"/>
                <Button x:Name="Btn_populate" Text="populate" Clicked="Btn_populate_Clicked"/>
            </StackLayout>-->
            <Label Text="First Name:" FontSize="Small" />
            <Entry x:Name="Ent_fname" FontSize="Small" />
            <Label Text="Last Name:" FontSize="Small" />
            <Entry x:Name="Ent_lname" FontSize="Small" Margin="0" />
            <Label Text="Email:" FontSize="Small" />
            <Entry x:Name="Ent_email" FontSize="Small" Margin="0" />
            <!--<Label Text="Photo:" FontSize="Small" />
            <Entry x:Name="Ent_img" FontSize="Small" Margin="0" />-->
        </StackLayout>
    </ContentPage.Content>
</ContentPage>