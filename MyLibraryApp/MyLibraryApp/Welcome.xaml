<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyLibraryApp.Welcome"
             Appearing="ContentPage_Appearing"
             Title="Welcome">
    
  <StackLayout Padding="10">
        <Label Text="This is the welcome page." VerticalOptions="Start" 
                HorizontalOptions="Center"/>
        <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
            <StackLayout Orientation="Horizontal">
                <Label Text="Number of books available for borrowing:"/>
                <Label x:Name="Lbl_avlbkcnt"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="Total number of books:"/>
                <Label x:Name="Lbl_ttlbkcnt"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="Total number of friends:"/>
                <Label x:Name="Lbl_ttlfncnt"/>
            </StackLayout>
        </StackLayout>
        
    </StackLayout>
</ContentPage>